<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="StartScenePane" prefHeight="325.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ap_proj.Controller">
   <children>
      <ImageView fitHeight="350.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@projimg.jpg" />
         </image>
      </ImageView>
      <Button layoutX="228.0" layoutY="152.0" mnemonicParsing="false" onAction="#switchToGameScene" text="START GAME" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="Arial Black" size="16.0" />
         </font></Button>
      <Label layoutX="113.0" layoutY="24.0" text="STICK HERO " textFill="#f4f4f8">
         <font>
            <Font name="Arial Black" size="56.0" />
         </font>
      </Label>
      <Button fx:id="ExitButton" layoutX="266.0" layoutY="213.0" mnemonicParsing="false" onAction="#exit" text="EXIT">
         <font>
            <Font name="Arial Black" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
